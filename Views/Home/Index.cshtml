@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">CALCULADORA</h1>
    <center>
    @using (Html.BeginForm()){
        <table>
            <tr>
                <th>Numero 1:</th>
                <td><input type="text" id="txtNumero1" name="numero1" class="form-control" /></td>
            </tr>
            <tr>
                <th>Numero 2:</th>
                <td><input type="text" id="txtNumero2" name="numero2" class="form-control" /></td>
            </tr>
            <tr>
                <td><input type="submit" name="tipo" value="Suma" class="btn btn-primary" /></td>
                <td><input type="submit" name="tipo" value="Resta" class="btn btn-primary" /></td>
                <td><input type="submit" name="tipo" value="Multiplicacion" class="btn btn-primary" /></td>
                <td><input type="submit" name="tipo" value="Division" class="btn btn-primary" /></td>
            </tr>
            <tr>
                <th>Resultado</th>
                <td><input type="text" class="form-control" value="@ViewBag.Result" /></td>
            </tr>
        </table>
    }
    </center>
</div>
